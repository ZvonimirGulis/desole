        <TextBlock x:Name="Title2" HorizontalAlignment="Left" Margin="894,264,0,0" Text="Désolé" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontFamily="Wingdings" FontSize="70" FontWeight="Bold" Height="75" Width="351" FontStyle="Italic" TextDecorations="None"/>

